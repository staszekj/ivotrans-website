---
import '../web-components/lang-dropdown/styles.css';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  lang?: 'pl' | 'it' | 'en' | 'de' | 'es' | 'pt';
}

const { title, lang = 'pl' } = Astro.props;
declare const __GIT_SHA__: string;
declare const __BUILD_DATE__: string;
const buildSha = typeof __GIT_SHA__ !== 'undefined' ? __GIT_SHA__ : 'dev';
const buildDate = typeof __BUILD_DATE__ !== 'undefined' ? __BUILD_DATE__ : 'dev';
---

<!doctype html>
<html lang={lang} data-build={buildSha} data-build-date={buildDate}>
  <head>
    <meta name="build-sha" content={buildSha} />
    <meta name="build-date" content={buildDate} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Ivotrans</title>
    <meta name="description" content="Ivotrans Tour Operator - organizator turystyki, wycieczki i pielgrzymki w Polsce, Europie i na Å›wiecie" />
    <script src="../web-components/lang-dropdown/index.ts"></script>
    <script>
      import '../scripts/telemetry';
    </script>
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    /* Ekko theme colors */
    --primary-color: #003F65;
    --secondary-color: #EB960B;
    --heading-color: #322d53;
    --text-color: #333333;
    --text-light: #666666;
    --bg-color: #ffffff;
    --bg-light: #f9f8fc;
    --bg-alt: rgba(0,63,101,0.05);
    --border-color: #e8e8e8;
    --link-hover: #0083ca;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Lato', sans-serif;
    font-weight: 400;
    font-size: 15px;
    color: var(--text-color);
    background-color: var(--bg-color);
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Lato', sans-serif;
    font-weight: 700;
    color: var(--heading-color);
  }

  h2 {
    font-size: 42px;
    line-height: 52px;
    letter-spacing: -1px;
  }

  h3 {
    font-size: 32px;
    line-height: 42px;
  }

  h6 {
    font-size: 18px;
    line-height: 28px;
  }

  a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--secondary-color);
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .container {
    max-width: 1170px;
    margin: 0 auto;
    padding: 0 15px;
  }

  /* Button styles matching Ekko */
  .tt_button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 14px 35px;
    border-radius: 30px;
    border: 2px solid var(--primary-color);
    background-color: var(--primary-color);
    color: #fff;
    font-family: 'Lato', sans-serif;
    font-weight: 700;
    font-size: 14px;
    text-transform: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .tt_button:hover {
    background-color: var(--secondary-color);
    border-color: var(--secondary-color);
    color: #fff;
  }

  .tt_button.tt_secondary_button {
    background-color: transparent;
    border-color: var(--secondary-color);
    color: var(--secondary-color);
  }

  .tt_button.tt_secondary_button:hover {
    background-color: var(--secondary-color);
    color: #fff;
  }

  /* Section title styling */
  .section-title {
    text-align: center;
    margin-bottom: 40px;
  }

  .section-title h2 {
    margin-bottom: 10px;
  }

  .section-title .subtitle {
    color: var(--text-light);
    font-size: 16px;
  }

  /* Row utilities */
  .row {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -15px;
  }

  .col-3, .col-9, .col-6, .col-4, .col-12 {
    padding: 0 15px;
  }

  .col-3 { flex: 0 0 25%; max-width: 25%; }
  .col-4 { flex: 0 0 33.333%; max-width: 33.333%; }
  .col-6 { flex: 0 0 50%; max-width: 50%; }
  .col-9 { flex: 0 0 75%; max-width: 75%; }
  .col-12 { flex: 0 0 100%; max-width: 100%; }

  @media (max-width: 768px) {
    .col-3, .col-4, .col-6, .col-9 { flex: 0 0 100%; max-width: 100%; }
    
    h2 {
      font-size: 28px;
      line-height: 36px;
    }
  }

  /* Icon list styling like original */
  .kd-icon-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .kd-icon-list-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 5px 0;
    font-size: 15px;
    color: var(--text-color);
  }

  .kd-icon-list-item i {
    color: var(--primary-color);
    font-size: 18px;
    width: 24px;
    text-align: center;
  }
</style>
