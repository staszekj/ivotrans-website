---
/**
 * Osoba Component
 * Komponent wyświetlający informacje o członku zespołu
 */
interface Props {
  zdjecie?: string;
  imie?: string;
  stanowisko?: string;
  specjalizacja?: string;
  email: string;
  telefon: string;
}

const { zdjecie, imie, stanowisko, specjalizacja, email, telefon } = Astro.props;
---

<div class="osoba-card">
  {zdjecie && <img src={zdjecie} alt={imie || ''} class="osoba-zdjecie" />}
  <div class="osoba-info">
    {imie && <h3 class="osoba-imie">{imie}</h3>}
    {stanowisko && <p class="osoba-stanowisko">{stanowisko}</p>}
    {specjalizacja && <p class="osoba-specjalizacja">{specjalizacja}</p>}
    
    <div class="osoba-kontakty">
      <a href={`mailto:${email}`} class="kontakt-link">
        <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
          <polyline points="22,6 12,13 2,6"/>
        </svg>
        <span>{email}</span>
      </a>
      <a href={`tel:${telefon.replace(/\s/g, '')}`} class="kontakt-link">
        <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
        <span>{telefon}</span>
      </a>
    </div>
  </div>
</div>

<style>
  .osoba-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--border-color);
    padding: 10px;
    width: 330px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .osoba-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
  }

  .osoba-zdjecie {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 1.25rem;
    object-fit: cover;
  }

  .osoba-info {
    flex: 1;
  }

  .osoba-imie {
    color: var(--primary-color);
    font-size: 1.25rem;
    margin: 0 0 0.25rem 0;
  }

  .osoba-stanowisko {
    color: var(--accent-color);
    font-weight: 600;
    font-size: 0.9rem;
    margin: 0 0 0.25rem 0;
  }

  .osoba-specjalizacja {
    color: var(--text-light);
    font-size: 0.85rem;
    margin: 0 0 1rem 0;
    min-height: 1.2em;
  }

  .osoba-kontakty {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
  }

  .kontakt-link {
    display: inline-flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.5rem;
    color: var(--text-color);
    font-size: 0.9rem;
    transition: color 0.2s;
    text-decoration: none;
  }

  .kontakt-link:hover {
    color: var(--primary-color);
  }

  .kontakt-link .icon {
    flex-shrink: 0;
    color: var(--secondary-color);
  }

  .kontakt-link:hover .icon {
    color: var(--primary-color);
  }
</style>
