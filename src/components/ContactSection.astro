---
/**
 * ContactSection Component
 * Reusable contact information section
 */
interface Props {
  lang: 'pl' | 'it';
  showMap?: boolean;
  variant?: 'full' | 'compact';
}

const { lang, showMap = true, variant = 'full' } = Astro.props;

const translations = {
  pl: {
    title: 'Kontakt',
    subtitle: 'Skontaktuj siƒô z nami',
    address: 'Adres',
    phone: 'Telefon',
    email: 'Email',
    hours: 'Godziny otwarcia',
    hoursText: 'Poniedzia≈Çek - PiƒÖtek: 9:00 - 17:00',
    writeUs: 'Napisz do nas',
    namePlaceholder: 'Imiƒô i nazwisko',
    emailPlaceholder: 'Adres email',
    phonePlaceholder: 'Telefon',
    messagePlaceholder: 'Twoja wiadomo≈õƒá...',
    send: 'Wy≈õlij wiadomo≈õƒá',
  },
  it: {
    title: 'Contatti',
    subtitle: 'Contattaci',
    address: 'Indirizzo',
    phone: 'Telefono',
    email: 'Email',
    hours: 'Orari di apertura',
    hoursText: 'Luned√¨ - Venerd√¨: 9:00 - 17:00',
    writeUs: 'Scrivici',
    namePlaceholder: 'Nome e cognome',
    emailPlaceholder: 'Indirizzo email',
    phonePlaceholder: 'Telefono',
    messagePlaceholder: 'Il tuo messaggio...',
    send: 'Invia messaggio',
  }
};

const t = translations[lang];
---

<section class={`contact-section ${variant}`}>
  <div class="container">
    <div class="contact-content">
      <div class="contact-info">
        <h2>{t.title}</h2>
        
        <div class="info-item">
          <div class="info-icon">üìç</div>
          <div class="info-text">
            <strong>{t.address}</strong>
            <p>Ivotrans Ivo Siejka<br>
            ul. Aleja Jana Paw≈Ça II 206 lok. 80<br>
            34-400 Nowy Targ</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">üìû</div>
          <div class="info-text">
            <strong>{t.phone}</strong>
            <p>+48 501 084 654</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">‚úâÔ∏è</div>
          <div class="info-text">
            <strong>{t.email}</strong>
            <p><a href="mailto:biuro@ivotrans.pl">biuro@ivotrans.pl</a></p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">üïê</div>
          <div class="info-text">
            <strong>{t.hours}</strong>
            <p>{t.hoursText}</p>
          </div>
        </div>
      </div>

      {variant === 'full' && (
        <div class="contact-form">
          <h3>{t.writeUs}</h3>
          <form>
            <div class="form-group">
              <input type="text" placeholder={t.namePlaceholder} required />
            </div>
            <div class="form-group">
              <input type="email" placeholder={t.emailPlaceholder} required />
            </div>
            <div class="form-group">
              <input type="tel" placeholder={t.phonePlaceholder} />
            </div>
            <div class="form-group">
              <textarea placeholder={t.messagePlaceholder} rows="5" required></textarea>
            </div>
            <button type="submit" class="btn-primary">{t.send}</button>
          </form>
        </div>
      )}
    </div>

    {showMap && (
      <div class="map-container">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2595.5!2d20.0333!3d49.4833!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDnCsDI5JzAwLjAiTiAyMMKwMDInMDAuMCJF!5e0!3m2!1spl!2spl!4v1234567890"
          width="100%" 
          height="400" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    )}
  </div>
</section>

<style>
  .contact-section {
    padding: 4rem 0;
  }

  .contact-section.compact {
    padding: 2rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .compact .contact-content {
    grid-template-columns: 1fr;
    margin-bottom: 0;
  }

  .contact-info h2 {
    color: var(--primary-color);
    margin-bottom: 2rem;
    font-size: 2rem;
  }

  .info-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .info-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .info-text strong {
    display: block;
    color: var(--primary-color);
    margin-bottom: 0.25rem;
  }

  .info-text p {
    margin: 0;
    color: var(--text-light);
  }

  .info-text a {
    color: var(--accent-color);
  }

  .contact-form h3 {
    color: var(--primary-color);
    margin-bottom: 1.5rem;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
  }

  .btn-primary {
    background: var(--primary-color);
    color: white;
    border: none;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.3s;
  }

  .btn-primary:hover {
    background: var(--accent-color);
  }

  .map-container {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
    }
  }
</style>
