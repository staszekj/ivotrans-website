---
/**
 * HeroSlider Component
 * Matches original Revolution Slider look with panzoom effect
 */
interface Props {
  title: string;
  subtitle: string;
  showLogo?: boolean;
  images?: string[];
}

const { 
  title, 
  subtitle, 
  showLogo = true,
  images = [
    '/images/zdjcienagaleriHOME14.jpg',
    '/images/zdjcienagaleriHOME3.jpg',
    '/images/zdjcienagaleriHOME11.jpg',
    '/images/zdjcienagaleriHOME12.jpg',
    '/images/zdjcienagaleriHOME9.jpg'
  ]
} = Astro.props;
---

<section class="hero-slider" id="hero-slider">
  <div class="slider-container">
    {images.map((img, index) => (
      <div 
        class:list={['slide', { active: index === 0 }]} 
        data-index={index}
      >
        <div class="slide-bg" style={`background-image: url('${img}')`}></div>
      </div>
    ))}
  </div>
  
  <div class="hero-content">
    {showLogo && <img src="/images/logo_white.svg" alt="Ivotrans Tour Operator" class="hero-logo" />}
    <h1 class="hero-title">{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
  </div>
  
  {images.length > 1 && (
    <div class="slider-nav">
      <div class="slider-bullets">
        {images.map((_, index) => (
          <button 
            class:list={['bullet', { active: index === 0 }]} 
            data-slide={index}
            aria-label={`Go to slide ${index + 1}`}
          ></button>
        ))}
      </div>
    </div>
  )}
</section>

<script>
  const slider = document.getElementById('hero-slider');
  const slides = slider?.querySelectorAll('.slide');
  const bullets = slider?.querySelectorAll('.bullet');
  let currentSlide = 0;
  let intervalId: ReturnType<typeof setInterval>;
  
  function goToSlide(index: number) {
    if (!slides || !bullets) return;
    
    slides.forEach((slide, i) => {
      slide.classList.toggle('active', i === index);
    });
    
    bullets.forEach((bullet, i) => {
      bullet.classList.toggle('active', i === index);
    });
    
    currentSlide = index;
  }
  
  function nextSlide() {
    if (!slides) return;
    const next = (currentSlide + 1) % slides.length;
    goToSlide(next);
  }
  
  function startAutoplay() {
    intervalId = setInterval(nextSlide, 5000);
  }
  
  function stopAutoplay() {
    clearInterval(intervalId);
  }
  
  // Initialize
  if (slides && slides.length > 1) {
    startAutoplay();
    
    bullets?.forEach((bullet, index) => {
      bullet.addEventListener('click', () => {
        stopAutoplay();
        goToSlide(index);
        startAutoplay();
      });
    });
  }
</script>

<style>
  .hero-slider {
    position: relative;
    height: 100vh;
    min-height: 600px;
    max-height: 900px;
    overflow: hidden;
  }

  .slider-container {
    position: absolute;
    inset: 0;
  }

  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 1.5s ease-in-out;
  }

  .slide.active {
    opacity: 1;
  }

  .slide-bg {
    position: absolute;
    inset: -10%;
    width: 120%;
    height: 120%;
    background-size: cover;
    background-position: center;
    animation: panzoom 20s ease-in-out infinite alternate;
  }

  .slide.active .slide-bg {
    animation-play-state: running;
  }

  .slide:not(.active) .slide-bg {
    animation-play-state: paused;
  }

  @keyframes panzoom {
    0% {
      transform: scale(1) translate(0, 0);
    }
    100% {
      transform: scale(1.1) translate(-2%, -2%);
    }
  }

  .hero-content {
    position: absolute;
    inset: 0;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    background: linear-gradient(
      to bottom,
      rgba(0, 63, 101, 0.3) 0%,
      rgba(0, 63, 101, 0.5) 100%
    );
  }

  .hero-logo {
    max-width: 400px;
    width: 90%;
    height: auto;
    margin-bottom: 2rem;
    filter: drop-shadow(0 2px 10px rgba(0, 0, 0, 0.3));
  }

  .hero-title {
    color: #fff;
    font-size: 20px;
    font-weight: 400;
    letter-spacing: 10px;
    text-transform: uppercase;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    color: #fff;
    font-size: 16px;
    font-weight: 400;
    max-width: 600px;
    opacity: 0.9;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  .slider-nav {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 20;
  }

  .slider-bullets {
    display: flex;
    gap: 12px;
  }

  .bullet {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.8);
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .bullet:hover {
    background: rgba(255, 255, 255, 0.5);
  }

  .bullet.active {
    background: #fff;
    border-color: #fff;
  }

  @media (max-width: 768px) {
    .hero-slider {
      min-height: 500px;
    }

    .hero-logo {
      max-width: 280px;
    }

    .hero-title {
      font-size: 16px;
      letter-spacing: 6px;
    }

    .hero-subtitle {
      font-size: 14px;
    }
  }
</style>
