<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* FAQ Section */
  .faq-section {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .faq-section h2 {
    text-align: center;
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .faq-item {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  }

  .faq-item h3 {
    color: var(--primary-color);
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }

  .faq-item p {
    color: var(--text-light);
    margin: 0;
    line-height: 1.6;
  }

  /* Social Section */
  .social-section {
    padding: 4rem 0;
    text-align: center;
  }

  .social-section h2 {
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    color: var(--text-light);
    margin-bottom: 2rem;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .social-link:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .social-link.facebook {
    background: #1877f2;
    color: white;
  }

  .social-link.instagram {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: white;
  }

  .social-icon {
    font-size: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .faq-grid {
      grid-template-columns: 1fr;
    }

    .social-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
