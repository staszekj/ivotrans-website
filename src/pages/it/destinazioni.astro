          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer lang={lang} />
</Layout>

<style>
  .tours-section,
  .pilgrimages-section {
    padding: 4rem 0;
  }

  .pilgrimages-section {
    background: var(--bg-light);
  }

  .two-column-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .content-column {
    text-align: left;
  }

  .image-column img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-header h2 {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .section-header p {
    font-size: 1.2rem;
    color: var(--text-light);
  }

  .content-block {
    margin-bottom: 2rem;
  }

  .content-block p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }

  @media (max-width: 900px) {
    .two-column-layout {
      grid-template-columns: 1fr;
    }

    .content-column {
      text-align: center;
    }

    .content-column .content-block {
      margin: 0 auto 2rem;
      max-width: 800px;
    }

    .image-column {
      order: -1;
    }
  }

  .destinations-map {
    padding: 4rem 0;
  }

  .destinations-map h2 {
    text-align: center;
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 3rem;
  }

  .destinations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .destination-region {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--border-color);
  }

  .destination-region h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent-color);
    font-size: 1.25rem;
  }

  .destination-region ul {
    list-style: none;
    columns: 2;
    column-gap: 1rem;
  }

  .destination-region li {
    padding: 0.35rem 0;
    font-size: 0.95rem;
    color: var(--text-color);
    break-inside: avoid;
  }

  @media (max-width: 768px) {
    .destination-region ul {
      columns: 1;
    }
  }
</style>
