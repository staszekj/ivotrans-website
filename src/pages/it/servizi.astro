<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Services Intro */
  .services-intro {
    padding: 4rem 0;
    text-align: center;
  }

  .services-intro h2 {
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .intro-text {
    max-width: 800px;
    margin: 0 auto;
    color: var(--text-light);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  /* Main Services */
  .main-services {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .main-services h2 {
    text-align: center;
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  /* Specialized Services */
  .specialized-services {
    padding: 4rem 0;
  }

  .specialized-services h2 {
    text-align: center;
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .specialized-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .specialized-card {
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--border-color);
  }

  .card-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .specialized-card h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .specialized-card p {
    color: var(--text-light);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .specialized-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .specialized-card li {
    padding: 0.5rem 0;
    color: var(--text-color);
    font-size: 0.9rem;
    border-bottom: 1px solid var(--border-color);
  }

  .specialized-card li:last-child {
    border-bottom: none;
  }

  /* Quality Section */
  .quality-section {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .quality-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .quality-text h2 {
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .quality-text p {
    color: var(--text-light);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .quality-list {
    list-style: none;
    padding: 0;
  }

  .quality-list li {
    padding: 0.5rem 0;
    color: var(--text-color);
    font-size: 1rem;
  }

  .quality-badge {
    text-align: center;
  }

  .badge {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    padding: 2rem 3rem;
    border-radius: 12px;
  }

  .badge-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .badge-text {
    font-size: 1.1rem;
    font-weight: 600;
    text-align: center;
  }

  /* CTA Section */
  .cta-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    text-align: center;
  }

  .cta-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .cta-section p {
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn-primary {
    display: inline-block;
    background: white;
    color: var(--primary-color);
    padding: 0.875rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s;
  }

  .btn-primary:hover {
    background: var(--bg-light);
  }

  .btn-secondary {
    display: inline-block;
    background: transparent;
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    border: 2px solid white;
    transition: all 0.3s;
  }

  .btn-secondary:hover {
    background: white;
    color: var(--primary-color);
  }

  /* Responsive */
  @media (max-width: 992px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .specialized-grid {
      grid-template-columns: 1fr;
    }

    .quality-content {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
