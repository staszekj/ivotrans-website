const lang = 'it';
const currentPath = '/it/servizi/';

const organizziamo = [
  {
    icon: 'üë•',
    title: 'Viaggi di gruppo di cui anche per i piccoli gruppi e comitive.'
  },
  {
    icon: 'üéØ',
    title: 'Viaggi su misura per gruppi precostituiti, associazioni culturali, cral, aziende'
  },
  {
    icon: '‚õ™',
    title: 'Pellegrinaggi'
  },
  {
    icon: 'üéì',
    title: 'Viaggi d`istruzione per le scuole'
  }
];

const altriServizi = [
  {
    icon: 'üè®',
    title: 'Prenotazioni alberghiere in Polonia e in Europa'
  },
  {
    icon: 'üöå',
    title: 'Noleggio di vari mezzi di trasporto'
  },
  {
    icon: '‚úàÔ∏è',
    title: 'Acquisto dei biglietti per viaggi in aereo, autobus o treno'
  },
  {
    icon: 'üéüÔ∏è',
    title: 'Prenotazione biglietti d`ingresso ai musei, concerti, teatri ed altri eventi'
  },
  {
    icon: 'üó£Ô∏è',
    title: 'Prenotazione guide turistiche in diverse lingue ed interpreti'
  }
