<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Intro Section */
  .intro-section {
    padding: 4rem 0;
    text-align: center;
  }

  .intro-section h2 {
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .intro-text {
    max-width: 800px;
    margin: 0 auto;
    color: var(--text-light);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  /* Cities Section */
  .cities-section {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .cities-section h2 {
    text-align: center;
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .cities-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .city-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s;
  }

  .city-card:hover {
    transform: translateY(-5px);
  }

  .city-header {
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    padding: 1rem 1.5rem;
  }

  .city-header h3 {
    margin: 0;
    font-size: 1.25rem;
  }

  .city-content {
    padding: 1.5rem;
  }

  .city-content p {
    color: var(--text-light);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .city-highlights {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .highlight-tag {
    display: inline-block;
    background: var(--bg-light);
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.85rem;
    color: var(--primary-color);
  }

  /* Attractions Section */
  .attractions-section {
    padding: 4rem 0;
  }

  .attractions-section h2 {
    text-align: center;
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .attractions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .attraction-card {
    padding: 1.5rem;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .attraction-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .attraction-type {
    display: inline-block;
    background: var(--accent-color);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .attraction-card h3 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .attraction-card p {
    color: var(--text-light);
    font-size: 0.9rem;
    margin: 0;
  }

  /* UNESCO Section */
  .unesco-section {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .unesco-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .unesco-text h2 {
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .unesco-text p {
    color: var(--text-light);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .unesco-list {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  .unesco-list li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-color);
  }

  .unesco-list li::before {
    content: 'üèõÔ∏è';
    position: absolute;
    left: 0;
  }

  .unesco-badge {
    text-align: center;
  }

  .badge {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    padding: 3rem;
    border-radius: 50%;
    width: 180px;
    height: 180px;
    justify-content: center;
  }

  .badge-number {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
  }

  .badge-text {
    font-size: 1rem;
  }

  /* Tips Section */
  .tips-section {
    padding: 4rem 0;
  }

  .tips-section h2 {
    text-align: center;
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .tips-grid {
