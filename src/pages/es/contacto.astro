---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PageHeader from "../../components/PageHeader.astro";
import Osoba from "../../components/Osoba.astro";

const lang = "es";
const currentPath = "/es/contacto/";
---

<Layout title="Contacto" lang={lang}>
  <Header lang={lang} currentPath={currentPath} />

  <PageHeader
    title="Contacto"
    subtitle="Contáctanos - estaremos encantados de responder a tus preguntas"
    backgroundImage="/images/zdjcienagaleriHOME4.jpg"
  />

  <main>
    <section class="team-section">
      <div class="container">
        <h2>Nuestro Equipo</h2>
        <div class="team-rows">
          <div class="team-grid">
            <Osoba
              imie="Iwona Strzałka"
              stanowisko="Directora General"
              specjalizacja="Especialista en turismo emisor"
              email="ivotrans@ivotrans.pl"
              telefon="+48 512 350 050"
              zdjecie="/images/team/iwona.png"
            />

            <Osoba
              imie="Marcin Paluch"
              stanowisko="Vicepresidente"
              specjalizacja="Especialista en turismo emisor"
              email="marcin@ivotrans.pl"
              telefon="+48 608 055 537"
              zdjecie="/images/team/marcin.png"
            />
          </div>
          <div class="team-grid">
            <Osoba
              imie="Sylwia Henslok"
              stanowisko="Especialista en turismo receptivo"
              email="biuro@ivotrans.pl"
              telefon="+48 12 376 71 55"
              zdjecie="/images/team/sylwia.png"
            />
            
            <Osoba
              imie="Elżbieta Jagiella"
              stanowisko="Especialista en liquidaciones financieras"
              email="ela@ivotrans.pl"
              telefon="+48 692 270 886"
            />

            <Osoba
              imie="Jakub Strzałka"
              stanowisko="Especialista"
              email="jakub@ivotrans.pl"
              telefon="+48 --- --- ---"
            />
          </div>
          <div class="team-grid">
            <Osoba email="joanna@ivotrans.pl" telefon="+48 12 376 73 49" />
            <Osoba email="travel@ivotrans.pl" telefon="+48 12 378 37 04" />
          </div>
        </div>
      </div>
    </section>

    <section class="contact-info-section">
      <div class="container">
        <div class="contact-grid">
          <div class="company-info">
            <h2>Ivotrans Sp. z o.o.</h2>
            <address>
              <p><strong>Dirección:</strong></p>
              <p>ul. Zakopiańska 2b/35</p>
              <p>30-418 Cracovia, Polonia</p>
            </address>

            <div class="main-contact">
              <a href="tel:+48122673030" class="contact-btn">
                <svg
                  class="icon"
                  xmlns="http://www.w3.org/2000/svg"
                  width="22"
                  height="22"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path>
                </svg>
                <span>+48 12 267 30 30</span>
              </a>
              <a href="mailto:ivotrans@ivotrans.pl" class="contact-btn">
                <svg
                  class="icon"
                  xmlns="http://www.w3.org/2000/svg"
                  width="22"
                  height="22"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                  ></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <span>ivotrans@ivotrans.pl</span>
              </a>
            </div>
          </div>

          <div class="map-placeholder">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2562.9513687366774!2d19.93159731571901!3d50.02659772394168!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165b0a5a3c5f3d%3A0x3c5c5f3d3c5c5f3d!2sul.%20Zakopia%C5%84ska%202b%2C%2030-418%20Krak%C3%B3w!5e0!3m2!1ses!2ses!4v1620000000000!5m2!1ses!2ses"
              width="100%"
              height="300"
              style="border:0; border-radius: 12px;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            >
            </iframe>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang={lang} />
</Layout>

<style>
  .contact-info-section {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .company-info h2 {
    color: var(--primary-color);
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  .company-info address {
    font-style: normal;
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .main-contact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: white;
    border: 2px solid var(--primary-color);
    border-radius: 8px;
    color: var(--primary-color);
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.2s;
  }

  .contact-btn:hover {
    background: var(--primary-color);
    color: white;
  }

  .contact-btn .icon {
    color: var(--secondary-color);
  }

  .team-section {
    padding: 4rem 0;
  }

  .team-section h2 {
    text-align: center;
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 3rem;
  }

  .team-rows {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .team-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-end;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
