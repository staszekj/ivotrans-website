    padding: 1rem 2rem;
    background: var(--accent-color);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: background 0.2s;
    margin: 0 auto;
  }

  .tours-section .container,
  .pilgrimages-section .container {
    text-align: center;
  }

  .btn-primary:hover {
    background: #dd6b20;
  }

  .destinations-map {
    padding: 4rem 0;
  }

  .destinations-map h2 {
    text-align: center;
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 3rem;
  }

  .destinations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .destination-region {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--border-color);
  }

  .destination-region h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent-color);
    font-size: 1.25rem;
  }

  .destination-region ul {
    list-style: none;
    columns: 2;
    column-gap: 1rem;
  }

  .destination-region li {
    padding: 0.35rem 0;
    font-size: 0.95rem;
    color: var(--text-color);
    break-inside: avoid;
  }

  @media (max-width: 768px) {
    .destination-region ul {
      columns: 1;
    }
  }
</style>
