const currentPath = '/en/services/';

const services = [
  {
    icon: 'üåç',
    title: 'Complete organization of tours and pilgrimages in Poland and worldwide',
    description: 'Full organization of group tourist and pilgrimage trips'
  },
  {
    icon: 'üöå',
    title: 'Coach rental domestically and abroad',
    description: 'Modern coaches with experienced drivers'
  },
  {
    icon: 'üè®',
    title: 'Accommodation and catering reservations',
    description: 'Verified hotel and restaurant base worldwide'
  },
  {
    icon: 'üéüÔ∏è',
    title: 'Assistance in purchasing tickets to museums and other tourist attractions',
    description: 'Queue-free reservations for the most popular places'
  },
  {
    icon: 'üéØ',
    title: 'Organization of team-building trips, conferences and training domestically and abroad',
    description: 'Comprehensive corporate event services'
  },
  {
    icon: '‚õ∑Ô∏è',
    title: 'Ski trips and camps',
    description: 'Organization of winter sports trips'
  },
  {
